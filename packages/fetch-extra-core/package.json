{
	"name": "fetch-extra-core",
	"version": "0.2.0",
	"description": "the core module for creating `fetch-extra`",
	"repository": "Cap32/fetch-extra",
	"scripts": {
    "prebuild": "rimraf lib es-browser browser && mkdirp lib es-browser browser",
    "postbuild": "rimraf es-browser",
    "browserbuild:es": "buble src -o es-browser --no modules",
    "browserbuild:cjs": "babel es-browser -d browser",
		"build:node": "cross-env BABEL_ENV=node babel src -d lib",
		"build:browser": "run-s browserbuild:*",
		"build": "run-p build:*",
		"start": "jest --watchAll",
		"test": "cross-env BABEL_ENV=development jest",
		"test:browser": "jest --testPathPattern=browser\\.test",
		"test:node": "jest --testPathPattern=node\\.test",
		"coverage": "jest --coverage",
		"coveralls": "cat ./coverage/lcov.info | coveralls",
		"preversion": "run-s test build"
	},
	"main": "lib/index.js",
	"browser": "browser/index.js",
	"files": [
		"lib",
		"browser",
		"*.md"
	],
	"engines": {
		"node": ">=4"
	},
	"keywords": [
		"fetch",
		"xhr",
		"http",
		"ajax",
		"promise",
		"request",
		"node"
	],
	"author": "cap32",
	"license": "MIT",
	"dependencies": {
		"tiny-querystring": "^0.0.2"
	},
	"devDependencies": {
		"co-body": "^5.2.0",
		"cors": "^2.8.4",
		"delay": "^2.0.0",
		"node-fetch": "^2.1.2",
		"qs": "^6.5.2",
		"whatwg-fetch": "^2.0.4"
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.js"
		],
		"modulePathIgnorePatterns": [
			"node_modules",
			"lib"
		]
	}
}
